<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
	<name>aguilotto</name>
	<version>1.0</version>
	<creationDate>12/05/2015</creationDate>
	<author>Wolfgang Spies</author>
	<authorEmail>w.spies@live.de</authorEmail>
	<copyright></copyright>
	<description>TPL_AGUILOTTO_XML_DESCRIPTION</description>
	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>img</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>less</folder>
	</files>
	<positions>
		<position>banner</position>
		<position>debug</position>
		<position>position-0</position>
		<position>menu</position>
		<position>header-bottom-pos-1</position>
		<position>header-bottom-pos-2</position>
		<position>header-bottom-pos-3</position>
		<position>content-left-sidebar</position>
		<position>content-helper</position>
		<position>position-2</position>
		<position>position-3</position>
		<position>position-4</position>
		<position>position-5</position>
		<position>position-9</position>
		<position>position-10</position>
		<position>position-11</position>
		<position>position-12</position>
		<position>position-13</position>
		<position>position-14</position>
		<position>footer</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_aguilotto.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_aguilotto.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="templateColor" class="" type="color" default="#08C"
					label="TPL_AGUILOTTO_COLOR_LABEL"
					description="TPL_AGUILOTTO_COLOR_DESC" />

				<field name="templateBackgroundColor" class="" type="color" default="#F4F6F7"
					label="TPL_AGUILOTTO_BACKGROUND_COLOR_LABEL"
					description="TPL_AGUILOTTO_BACKGROUND_COLOR_DESC" />

				<field name="logoFile" class="" type="media" default=""
					label="TPL_AGUILOTTO_LOGO_LABEL"
					description="TPL_AGUILOTTO_LOGO_DESC" />
					
				<field name="sitetitle"  type="text" default=""
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					filter="string" />

				<field name="sitedescription"  type="text" default=""
					label="JGLOBAL_DESCRIPTION"
					description="JGLOBAL_SUBHEADING_DESC"
					filter="string" />

				<field name="googleFont"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="TPL_AGUILOTTO_FONT_LABEL"
					description="TPL_AGUILOTTO_FONT_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field name="googleFontName" class="" type="text" default="Open+Sans"
					label="TPL_AGUILOTTO_FONT_NAME_LABEL"
					description="TPL_AGUILOTTO_FONT_NAME_DESC" />

				<field name="fluidContainer"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="TPL_AGUILOTTO_FLUID_LABEL"
					description="TPL_AGUILOTTO_FLUID_DESC"
				>
					<option value="1">TPL_AGUILOTTO_FLUID</option>
					<option value="0">TPL_AGUILOTTO_STATIC</option>
				</field>
				<field name="usewsnavigator"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="TPL_AGUILOTTO_USENAVIGATOR_LABEL"
					description="TPL_AGUILOTTO_USENAVIGATOR_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="usebordertop"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="TPL_AGUILOTTO_USEBORDERTOP_LABEL"
					description="TPL_AGUILOTTO_USEBORDERTOP_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
