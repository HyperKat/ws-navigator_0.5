<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
    <name>MOD_WSNAVIGATOR</name>
    <author>Wolfgang Spies</author>
    <creationDate>April 2015</creationDate>
    <copyright>Copyright (C) 2015 Wolfgang Spies.</copyright>
    <license></license>
    <authorEmail>w.spies@live.de</authorEmail>
    <authorUrl></authorUrl>
    <version>3.0.0</version>
    <description>MOD_WSNAVIGATOR_XML_DESCRIPTION</description>
    <files>
        <filename module="mod_wsnavigator">mod_wsnavigator.php</filename>
        <folder>tmpl</folder>
        <folder>css</folder>
        <folder>js</folder>
        <filename>helper.php</filename>
        <filename>mod_wsnavigator.xml</filename>
    </files>
    <languages>
        <language tag="en-GB">en-GB.mod_wsnavigator.ini</language>
        <language tag="en-GB">en-GB.mod_wsnavigator.sys.ini</language>
        <language tag="de-DE">de-DE.mod_wsnavigator.ini</language>
        <language tag="de-DE">de-DE.mod_wsnavigator.sys.ini</language>
    </languages>
    <help key="JHELP_EXTENSIONS_MODULE_MANAGER_MENU" />
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="menutype"
                    type="menu"
                    label="MOD_WSNAVIGATOR_FIELD_MENUTYPE_LABEL"
                    description="MOD_WSNAVIGATOR_FIELD_MENUTYPE_DESC" />
                <field
                    name="base"
                    type="menuitem"
                    label="MOD_WSNAVIGATOR_FIELD_ACTIVE_LABEL"
                    description="MOD_WSNAVIGATOR_FIELD_ACTIVE_DESC"
                    >
                    <option value="">JCURRENT</option>
                </field>
                <field
                    name="startLevel"
                    type="list"
                    default="1"
                    label="MOD_WSNAVIGATOR_FIELD_STARTLEVEL_LABEL"
                    description="MOD_WSNAVIGATOR_FIELD_STARTLEVEL_DESC"
                >
                    <option value="1">J1</option>
                    <option value="2">J2</option>
                    <option value="3">J3</option>
                    <option value="4">J4</option>
                    <option value="5">J5</option>
                    <option value="6">J6</option>
                    <option value="7">J7</option>
                    <option value="8">J8</option>
                    <option value="9">J9</option>
                    <option value="10">J10</option>
                </field>

                <field
                    name="endLevel"
                    type="list"
                    default="0"
                    label="MOD_WSNAVIGATOR_FIELD_ENDLEVEL_LABEL"
                    description="MOD_WSNAVIGATOR_FIELD_ENDLEVEL_DESC"
                    >
                    <option value="0">JALL</option>
                    <option value="1">J1</option>
                    <option value="2">J2</option>
                    <option value="3">J3</option>
                    <option value="4">J4</option>
                    <option value="5">J5</option>
                    <option value="6">J6</option>
                    <option value="7">J7</option>
                    <option value="8">J8</option>
                    <option value="9">J9</option>
                    <option value="10">J10</option>
                </field>
                <field
                    name="showAllChildren"
                    type="radio"
                    class="btn-group btn-group-yesno"
                    default="1"
                    label="MOD_WSNAVIGATOR_FIELD_ALLCHILDREN_LABEL"
                    description="MOD_WSNAVIGATOR_FIELD_ALLCHILDREN_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field
                    name="useloginextension"
                    type="list"
                    default="0"
                    label="MOD_WSNAVIGATOR_FIELD_USELOGINEXTENSION_LABEL"
                    description="MOD_WSNAVIGATOR_FIELD_USELOGINEXTENSION_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
				
				<field
                    name="useanimation"
                    type="list"
                    default="st-effect-11"
                    label="MOD_WSNAVIGATOR_FIELD_DATAEFECT_LABEL"
                    description="MOD_WSNAVIGATOR_FIELD_DATAEFECT_DESC">
                    <option value="st-effect-1">
                        MOD_WSNAVIGATOR_VALUE_EFFECT-01
                    </option>
                    <option value="st-effect-2">
                        MOD_WSNAVIGATOR_VALUE_EFFECT-02
                    </option>
                    <option value="st-effect-3">
                        MOD_WSNAVIGATOR_VALUE_EFFECT-03
                    </option>
                    <option value="st-effect-4">
                        MOD_WSNAVIGATOR_VALUE_EFFECT-04
                    </option>
                    <option value="st-effect-5">
                        MOD_WSNAVIGATOR_VALUE_EFFECT-05
                    </option>
                    <option value="st-effect-6">
                        MOD_WSNAVIGATOR_VALUE_EFFECT-06
                    </option>
                    <option value="st-effect-7">
                        MOD_WSNAVIGATOR_VALUE_EFFECT-07
                    </option>
                    <option value="st-effect-8">
                        MOD_WSNAVIGATOR_VALUE_EFFECT-08
                    </option>
                    <option value="st-effect-9">
                        MOD_WSNAVIGATOR_VALUE_EFFECT-09
                    </option>
                    <option value="st-effect-10">
                        MOD_WSNAVIGATOR_VALUE_EFFECT-10
                    </option>
                    <option value="st-effect-11">
                        MOD_WSNAVIGATOR_VALUE_EFFECT-11
                    </option>
                    <option value="st-effect-12">
                        MOD_WSNAVIGATOR_VALUE_EFFECT-12
                    </option>
                    <option value="st-effect-13">
                        MOD_WSNAVIGATOR_VALUE_EFFECT-13
                    </option>
                    <option value="st-effect-14">
                        MOD_WSNAVIGATOR_VALUE_EFFECT-14
                    </option>
                </field>
            </fieldset>

            <fieldset
                name="advanced">

                <field
                    name="class_sfx"
                    type="text" rows="5"
                    label="MOD_WSNAVIGATOR_FIELD_CLASS_LABEL"
                    description="MOD_WSNAVIGATOR_FIELD_CLASS_DESC" />

                <field
                    name="layout"
                    type="modulelayout"
                    label="JFIELD_ALT_LAYOUT_LABEL"
                    description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

                <field
                    name="moduleclass_sfx"
                    type="textarea" rows="3"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
                
                <field
                    name="cache"
                    type="list"
                    default="1"
                    label="COM_MODULES_FIELD_CACHING_LABEL"
                    description="COM_MODULES_FIELD_CACHING_DESC">
                    <option
                        value="1">JGLOBAL_USE_GLOBAL</option>
                    <option
                        value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field
                    name="cache_time"
                    type="text"
                    default="900"
                    label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                    description="COM_MODULES_FIELD_CACHE_TIME_DESC" />

                <field
                    name="cachemode"
                    type="hidden"
                    default="itemid">
                    <option
                        value="itemid"></option>
                </field>
				</fieldset>
			<fieldset
                name="template">
				
				<field
					name="liner_mplevel"
                    type="spacer" 
					label="MOD_WSNAVIGATOR_VALUE_LINERMPLEVEL_LABEL" />
					
				<field
                    name="menu_fontcolor"
                    type="color"
					default="#fff"
                    label="MOD_WSNAVIGATOR_FIELD_FONTCOLOR_LABEL"
                    description="MOD_WSNAVIGATOR_FIELD_FONTCOLOR_DESC" />
				
                <field
                    name="mplevel_color"
                    type="text" rows="4"
                    label="MOD_WSNAVIGATOR_FIELD_MPLEVELCOLOR_LABEL"
                    description="MOD_WSNAVIGATOR_FIELD_MPLEVELCOLOR_DESC" />

				<field
                    name="mplevel_colorfilter"
                    type="list"
                    default="1"
                    label="MOD_WSNAVIGATOR_VALUE_MPLEVELCOLORFILTER_LABEL"
                    description="MOD_WSNAVIGATOR_VALUE_MPLEVELCOLORFILTER_DESC">
                    <option value="1">
                        MOD_WSNAVIGATOR_VALUE_COLORFILTER-UP
                    </option>
                    <option value="2">
                        MOD_WSNAVIGATOR_VALUE_COLORFILTER-DOWN
                    </option>
                </field>
				
				<field
					name="liner_mpback"
                    type="spacer" 
					label="MOD_WSNAVIGATOR_VALUE_LINERMPBACK_LABEL" />
				
				<field
                    name="mpback_fontcolor"
                    type="color"
					default="#fff"
                    label="MOD_WSNAVIGATOR_MPBACK_FONTCOLOR_LABEL"
                    description="MOD_WSNAVIGATOR_MPBACK_FONTCOLOR_DESC" />
						
				<field
                    name="mpback_color"
                    type="color"
					default="#000"
                    label="MOD_WSNAVIGATOR_FIELD_MPBACKCOLOR_LABEL"
                    description="MOD_WSNAVIGATOR_FIELD_MPBACKCOLOR_DESC" />
				
				<field
                    name="mpback_colorfilter"
                    type="list"
                    default="1"
                    label="MOD_WSNAVIGATOR_VALUE_MPBACKCOLORFILTER_LABEL"
                    description="MOD_WSNAVIGATOR_VALUE_MPBACKCOLORFILTER_DESC">
                    <option value="1">
                        MOD_WSNAVIGATOR_VALUE_COLORFILTER-UP
                    </option>
                    <option value="2">
                        MOD_WSNAVIGATOR_VALUE_COLORFILTER-DOWN
                    </option>
                </field>
					
            </fieldset>
			<fieldset
                name="trigger">
				
				<field
					name="trigger_desc"
                    type="spacer" 
					label="MOD_WSNAVIGATOR_FIELD_TRIGGER_LABEL" />
				
				<field
                    name="triggertext"
                    type="text"
                    default="Menü"
                    label="MOD_WSNAVIGATOR_FIELD_TRIGGERTEXT_LABEL"
                    description="MOD_WSNAVIGATOR_FIELD_TRIGGERTEXT_DESC" />
				
				<field
                    name="trigger_fontcolor"
                    type="color"
					default="#fff"
                    label="MOD_WSNAVIGATOR_TRIGGER_FONTCOLOR_LABEL"
                    description="MOD_WSNAVIGATOR_TRIGGER_FONTCOLOR_DESC" />
						
				<field
                    name="trigger_bgcolor"
                    type="color"
					default="#rrggbb"
                    label="MOD_WSNAVIGATOR_FIELD_TRIGGERBGCOLOR_LABEL"
                    description="MOD_WSNAVIGATOR_FIELD_TRIGGERBGCOLOR_DESC" />
				
				<field
                    name="trigger_colorfilter"
                    type="list"
                    default="1"
                    label="MOD_WSNAVIGATOR_VALUE_TRIGGERCOLORFILTER_LABEL"
                    description="MOD_WSNAVIGATOR_VALUE_TRIGGERCOLORFILTER_DESC"
					disabled="1">
                    <option value="1">
                        MOD_WSNAVIGATOR_VALUE_COLORFILTER-UP
                    </option>
                    <option value="2">
                        MOD_WSNAVIGATOR_VALUE_COLORFILTER-DOWN
                    </option>
                </field>
					
				<field
                    name="trigger_border"
                    type="list"
					default="0"
                    label="MOD_WSNAVIGATOR_FIELD_TRIGGERBORDER_LABEL"
                    description="MOD_WSNAVIGATOR_FIELD_TRIGGERBORDER_DESC" >
					<option value="0">JNO</option>
                    <option value="1">JYES</option>
				</field>
				
				<field
                    name="trigger_borderwidth"
                    type="integer"
					default="0"
                    label="MOD_WSNAVIGATOR_FIELD_TRIGGERBORDERWIDTH_LABEL"
                    description="MOD_WSNAVIGATOR_FIELD_TRIGGERBORDERWIDTH_DESC" 
					first="0" last="10" step="1" showon="trigger_border:1" />
				
				<field
                    name="trigger_brcolor"
                    type="color"
					default="#rrggbb"
                    label="MOD_WSNAVIGATOR_FIELD_TRIGGERBRCOLOR_LABEL"
                    description="MOD_WSNAVIGATOR_FIELD_TRIGGERBRCOLOR_DESC" 
					showon="trigger_border:1" />
				
                <field
                    name="usetext"
                    type="list"
                    default="1"
                    label="MOD_WSNAVIGATOR_FIELD_USETEXT_LABEL"
                    description="MOD_WSNAVIGATOR_FIELD_USETEXT_DESC">
                    <option
                        value="0">MOD_WSNAVIGATOR_VALUE_ICONS
                    </option>
                    <option
                        value="1">MOD_WSNAVIGATOR_VALUE_TEXT
					</option>
					<option
                        value="2">MOD_WSNAVIGATOR_VALUE_TEXTICONS
                    </option>
				</field>
				
				<field
                    name="triggerimage"
                    type="media"
                    label="MOD_WSNAVIGATOR_FIELD_TRIGGERIMAGE_LABEL"
                    description="MOD_WSNAVIGATOR_FIELD_TRIGGERIMAGE_DESC" 
					showon="usetext:0,2" />
					
			</fieldset>
        </fields>
    </config>
</extension>
